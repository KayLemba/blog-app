<div class="show-user">
  <h1>Show User Data</h1>
  <ul>
    <li>
      <div class="card">
        <div>
          <%= image_tag ("#{@user.photo}") %>
        </div>
        <h2>
          <%= @user.name %>
        </h2>
        <p>Number of posts: <%= @user.posts_counter %></p>
      </div>
    </li>
  </ul>
  <div>
    <h3>Bio</h3>
    <p>
      <%= @user.bio %>
    </p>
  </div>
  <div>
    <h2>Posts:</h2>
    <ul>
      <% @user.return_three_posts.each do |post| %>
        <li>
          <div class='post-card'>
            <div>
              <h3>
                <%= post.title %>
              </h3>
            </div>
            <p>
              <%= post.text %>
            </p>
            <div>
              <span>Comments:
                <%= post.comments_counter %>
              </span>
              <span> Likes:
                <%= post.likes_counter %>
              </span>
            </div>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
  <%= link_to 'See all posts', user_posts_path(@user.id) , class:'btn'%>
</div>
