<h1>Posts</h1>

<ul>
  <li>
    <div class="card">
      <div>
        <%= image_tag ("#{@user.photo}") %>
      </div>
      <h2>
        <%= @user.name %>
      </h2>
      <p>Number of posts: <%= @user.posts_counter %></p>
    </div>
  </li>
</ul>

  <ul>
      <% @user.posts.each do |post| %>
      <%= link_to   user_post_path(@user.id, post.id) do %>
        <li>
          <div class='post-card'>
            <div>
              <h3>
                <%= post.title %>
              </h3>
            </div>
            <p>
              <%= post.text %>
            </p>
            <div>
              <span>Comments:
                <%= post.comments_counter %>
              </span>
              <span> Likes:
                <%= post.likes_counter %>
              </span>
            </div>
            <div class="comment">
            
            
            <% post.comments.each do |comment| %>
              <p>
            <%= comment.text %>
            </p>
            <% end %>
            
            </div>
          </div>
        </li>
        <% end %>
      <% end %>
    </ul>

    <%= link_to 'Create Post', new_user_post_path, class:'btn' %>
