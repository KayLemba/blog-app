<h1> Posts Show Page</h1>

 <ul>
        <li>
          <div class='post-card'>
            <div>
              <h3>
                <%= @post.title %>
              </h3>
            </div>
            <p>
              <%= @post.text %>
            </p>
            <div>
              <span>Comments:
                <%= @post.comments_counter %>
              </span>
              <span> Likes:
                <%= @post.likes_counter %>
              </span>
            </div>
            <div class="comment">
            
            
            <% @post.comments.each do |comment| %>
              <p>
            <%= comment.text %>
            </p>
            <% end %>
            
            </div>
          </div>
        </li>      
    </ul>

     <h1 class="Comment-here">Comment here....</h1>
  <%= form_with url: new_comment_user_post_path do |form| %>
    <div class="mb-3">
      <%= form.text_area :text, class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  <% end %>