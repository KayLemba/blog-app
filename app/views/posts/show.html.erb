<div class="content">
  <div class="post-header">
    <div>
      <p><%= t('post', id: @post.id) %> <%= t('by', name: @post.author.name) %></p>
    </div>
    <div>
      <p class="is-size-7"><%= t('comments_counter', count: @post.Comments_Counter) %>, <%= t('likes_counter', count: @post.Likes_Counter) %></p>
    </div>
  </div>
  <p class="is-size-7 is-italic"><%= t('posted_on', date: @post.created_at.to_s(:nice_date)) %></p>
  <h1><%= @post.title %></h1>
  <p><%= @post.text %></p>
</div>
<%= render partial: "shared/comment", collection: @post.comments %>
